<Window x:Class="Inventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModel="clr-namespace:Inventory.MVVM.ViewModel"
        xmlns:local="clr-namespace:Inventory"
        mc:Ignorable="d"
        Height="720" Width="1280"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Title="MainWindow"       
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
        
    <Border Background="Yellow"
            CornerRadius="10">
        <Grid>
            <!--GRID DEFINITION-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"></RowDefinition>
                <RowDefinition Height="81*"></RowDefinition>
                <RowDefinition Height="15*"></RowDefinition>
            </Grid.RowDefinitions>
            <!--SIZE BUTTONS-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                <Ellipse Fill="GreenYellow" Grid.Row="0" Height="15" Width="15" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,2,0" MouseLeftButtonDown="MaximizeApp" ToolTip="Close"></Ellipse>
                <Ellipse Fill="Orange" Grid.Row="0" Height="15" Width="15" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,2,0" MouseLeftButtonDown="MinimizeApp" ToolTip="Close"></Ellipse>
                <Ellipse Fill="Red" Grid.Row="0" Height="15" Width="15" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" MouseLeftButtonDown="CloseApp" ToolTip="Close"></Ellipse>
            </StackPanel>
            <!--SIDE BAR-->
            <StackPanel Grid.Row ="0"
                            Grid.Column="0"
                        Grid.RowSpan="2">
                <!--SIDE MENU-->
                <TextBlock Text="Hehehe"
                       FontSize="22"
                       Margin="20, 0, 0, 0"
                       >
                <!--Logo
                Company Name-->
                </TextBlock>

                <!--NAVIGATION BUTTONS-->
                <Button Content="T-Shirts"
                        Height="50"
                        Foreground="White"
                        FontSize="14"
                        Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding TShirtDetailsViewCommand}"
                        IsDefault="True"/>
                <Button Content="Stocks"
                        Height="50"
                        Foreground="White"
                        FontSize="14"
                        Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding StocksViewCommand}"/>
                <Button Content="Deliveries"
                        Height="50"
                        Foreground="White"
                        FontSize="14"
                        Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding DeliveriesViewCommand}"/>
                <Button Content="Log"
                        Height="50"
                        Foreground="White"
                        FontSize="14"
                        Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding LogViewCommand}"/>
            </StackPanel>
            <StackPanel Grid.Row ="2">
                <Button x:Name="LogOut" Content="LogOut"
                        Height="50"
                        Foreground="White"
                        FontSize="14"
                        Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Click="LogOut_Click"/>
            </StackPanel>
            <ContentControl Grid.Row ="1"
                            Grid.Column="1"
                            Grid.RowSpan="2"
                            Margin="10, 2, 10, 10"
                            Content ="{Binding CurrentView}"/>

        </Grid>
        
    </Border>
</Window>
